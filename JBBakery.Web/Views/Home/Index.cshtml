@{
    ViewData["Title"] = "Home";
}

<!-- HERO SECTION -->
<div class="hero-section">
    <div class="hero-overlay text-center" data-aos="fade-up">
        <h1 class="display-4 fw-bold mb-3">Freshly Baked Perfection</h1>
        <p class="lead mb-4">
            Square muffins, round muffins & mini scones baked daily in Pietermaritzburg.
        </p>
        <a href="/Home/Menu" class="btn-red">View Our Bakes</a>
    </div>
</div>

<!-- ABOUT SECTION -->
<div class="container py-5 text-center" data-aos="fade-up">
    <h2 class="section-title mb-4">About J Bakery</h2>

    <p class="text-muted mx-auto" style="max-width: 800px;">
        J Bakery specialises in freshly baked, homemade muffins and mini scones
        made daily in Pietermaritzburg. Known for their soft texture, rich flavour,
        and eye-catching presentation, our baked goods are perfect for special occasions,
        catering events, schools, and everyday treats.
    </p>
</div>

<!-- SPECIALTIES SECTION -->
<div class="container pb-5">
    <h2 class="section-title text-center">Our Specialties</h2>
    <p class="text-center text-muted mb-5">
        Perfect for schools, events, offices and family gatherings.
    </p>

    <div class="row g-4">

        <!-- Square Muffins -->
        <div class="col-md-4" data-aos="fade-up">
            <div class="card card-modern h-100">
                <div class="card-img-wrapper">
                    <img src="/images/square-muffin.png" class="img-fluid" alt="Square Muffins">
                </div>
                <div class="card-body text-center">
                    <h4 class="fw-bold">Square Muffins</h4>
                    <p class="text-muted">
                        Soft, fluffy and ideal for bulk and catering orders, freshly baked daily.
                    </p>
                </div>
            </div>
        </div>

        <!-- Mini Scones -->
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
            <div class="card card-modern h-100">
                <div class="card-img-wrapper">
                    <img src="/images/mini-scones.png" class="img-fluid" alt="Mini Scones">
                </div>
                <div class="card-body text-center">
                    <h4 class="fw-bold">Mini Scones</h4>
                    <p class="text-muted">
                        Freshly baked and perfect for tea-time or catering trays.
                    </p>
                </div>
            </div>
        </div>

        <!-- Round Muffins -->
        <div class="col-md-4" data-aos="fade-up" data-aos-delay="150">
            <div class="card card-modern h-100">
                <div class="card-img-wrapper">
                    <img src="/images/round-muffin.png" class="img-fluid" alt="Round Muffins">
                </div>
                <div class="card-body text-center">
                    <h4 class="fw-bold">Round Muffins</h4>
                    <p class="text-muted">
                        Classic golden muffins perfect for lunchboxes and events.
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>