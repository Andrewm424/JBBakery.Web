@{
    ViewData["Title"] = "Contact";
}

<!-- HERO -->
<div class="hero-section">
    <div class="hero-overlay text-center">
        <h1 class="display-4 fw-bold mb-3">Visit J Bakery</h1>
        <p class="lead mb-4">
            Fresh muffins and mini scones baked daily in Pietermaritzburg.
        </p>

        <a href="https://wa.me/27676229242"
           target="_blank"
           class="btn-red">
            Order on WhatsApp
        </a>
    </div>
</div>

<!-- QUICK CONTACT STRIP -->
<div class="contact-strip py-4">
    <div class="container">
        <div class="row text-center g-4">

            <div class="col-md-4">
                <h6 class="fw-bold mb-1">Address</h6>
                <p class="mb-0 text-muted">
                    501 Church Street<br />
                    Pietermaritzburg, 3201
                </p>
            </div>

            <div class="col-md-4">
                <h6 class="fw-bold mb-1">Call / WhatsApp</h6>
                <p class="mb-0 text-muted">
                    +27 67 622 9242
                </p>
            </div>

            <div class="col-md-4">
                <h6 class="fw-bold mb-1">Open Today</h6>
                <p class="mb-0 text-muted">
                    07:00 – 19:00
                </p>
            </div>

        </div>
    </div>
</div>

<!-- MAP SECTION -->
<div class="map-section py-5">
    <div class="container">
        <h2 class="section-title text-center mb-4">Find Us on the Map</h2>

        <div class="map-wrapper shadow-lg">
            <iframe src="https://www.google.com/maps?q=501+Church+St+Pietermaritzburg&output=embed"
                    width="100%"
                    height="420"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy">
            </iframe>
        </div>

        <div class="text-center mt-4">
            <a href="https://www.google.com/maps?q=501+Church+St+Pietermaritzburg"
               target="_blank"
               class="btn-outline-red">
                Open in Google Maps
            </a>
        </div>
    </div>
</div>

<!-- BUSINESS HOURS -->
<div class="container py-5">
    <div class="hours-card mx-auto">
        <h4 class="fw-bold text-center mb-4">Business Hours</h4>

        <ul class="list-unstyled text-center">
            <li>Sunday: 08:00 – 12:00</li>
            <li>Monday: 07:00 – 19:00</li>
            <li>Tuesday: 07:00 – 19:00</li>
            <li>Wednesday: 07:00 – 15:00</li>
            <li>Thursday: 07:00 – 19:00</li>
            <li>Friday: 07:00 – 15:00</li>
            <li>Saturday: Closed</li>
        </ul>
    </div>
</div>

</div>